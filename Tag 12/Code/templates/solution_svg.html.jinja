<!doctype html>
<html>

<head>
    <!-- page header, usually the tab name in the browser -->
    <title>SVG Template</title>

    <!-- favicon -->
    <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">
</head>

<body>
    <h1>A '{{shape|escape}}' with SVG</h1> 
    <svg height="400" width="600">
    {% if shape == 'circle' %}   
        <circle cx="50" cy="50" r="40" stroke="{{border}}" stroke-width="3" fill="{{color}}" />
    {% elif shape == 'rect' %}
        <rect width="80" height="50" stroke="{{border}}" stroke-width="3" fill="{{color}}"  />
    {% else %}
        <text x="0" y="15" fill="{{color}}">Did not understand '{{shape|escape}}', so here is an SVG Text</text>
    {% endif %}
    Sorry, your browser does not support inline SVG.  
    </svg>
   
</body>

</html>